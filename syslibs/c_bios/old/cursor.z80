.include "darkstar.inc"

	.module cursor

	.area _CODE

	;
	; Set cursor position
	;
_setcrs::
	ld	hl,#2
	add	hl,sp
	ld	e,(hl)
	inc	hl
	ld	d,(hl)
	ex	de,hl		; x,y  on HL

	call	BBSETCRS


	; return value
	ld	hl,#0x00
	ret

	;
	; Get cursor position
	;
_getcrs::
	; get it
	call	BBGETCRS

	; return value already on HL
	ret

